<!--Page to view all universes for specific user-->
<h1>Author Dashboard</h1>
<h2>Welcome, {{author.fullName}}</h2>

{{#if universes}}
{{#each universes}}
<div class="card">
    <h5 class="card-header">{{univName}}</h5>
    <div class="card-body">
        <p class="card-text">{{univDescription}}</p>
        <a href="/manageuniverse/{{universeID}}" class="btn btn-primary">Select Universe</a>
    </div>
</div>
{{/each}}
{{else}}
<div>
    <h5>You do not currently have any universes...</h5>
</div>
{{/if}}
<br>
<a href="#" class="btn btn-primary">Create New Universe [dummy button for now]</a>
