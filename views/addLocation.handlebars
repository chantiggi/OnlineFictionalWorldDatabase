<!--Form to add new location to database-->
<h1>Add New Location</h1>
<h2>Universe: {{universe.univName}}</h2>

<form action="/addLocation" method="post">
    <div>
        <label>Location Name:</label>
        <input type="text" name="locName" required />
    </div>
    <div>
        <label>Description:</label>
        <input type="text" name="locDescription" required />
    </div>
    <div>
        <input type="hidden" name="univID" value="{{universe.universeID}}">
    </div>
    <div>
        <input type="submit" value="Add Location" />
    </div>
</form>